{
  "exec": "node --experimental-specifier-resolution=node --inspect=0.0.0.0:9229 dist/server.js",
  "restartable": "rs",
  "verbose": true,
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "./dist"
  ],
  "env": {
    "NODE_ENV": "dev"
  },
  "ext": "js, ts"
}
