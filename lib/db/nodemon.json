{
  "exec": "ttsc --project ./tsconfig.lib.json",
  "delay": 2000,
  "restartable": "rs",
  "verbose": true,
  "events": {
    "exit": "echo [$(date +%H:%M:%S)]"
  },
  "watch": [
    "./src",
    "../../dist/lib/environment",
    "../../dist/lib/dto",
    "../../dist/lib/shared"
  ],
  "env": {
    "NODE_ENV": "dev"
  },
  "ext": "ts"
}
